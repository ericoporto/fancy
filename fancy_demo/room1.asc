// room script file

function hGlowingOrb_Look(Hotspot *thisHotspot, CursorMode mode)
{
  player.Say("It is the second best glowing orb that I've seen today.");
}

FancyTypedText fttb;

function room_AfterFadeIn()
{
  fttb.SetDrawingConfig(FancyDrawingConfig.Create(eFontSpeech, 22422));
  fttb.SetDrawingArea(48, 48, 200);
  
  String ft = "Hello!\nCan you find me the [c:27647]blue cup [s:2041][/c]?\nI lost it in the [c:64493]dangerous [f:0]planet[/f][/c], somewhere.";
  
  fttb.Start(ft);
  
}

void repeatedly_execute_always()
{
  DrawingSurface* surf = Room.GetDrawingSurfaceForBackground();
  
  surf.DrawingColor = 10565;
  surf.DrawRectangle(48, 48, 248, 108);
  
  fttb.Tick();
  fttb.DrawTyped(surf);
  
 // surf.DrawFancyTextWrapped(48, 48, 200, 22422, eFontSpeech, ft);
  
}